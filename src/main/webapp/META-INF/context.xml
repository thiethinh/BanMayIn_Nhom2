<?xml version="1.0" encoding="UTF-8"?>
<Context>
    <Resource
            name="jdbc/MyDB"
            auth="Container"
            type="javax.sql.DataSource"
            factory="org.apache.tomcat.jdbc.pool.DataSourceFactory"
            driverClassName="com.mysql.cj.jdbc.Driver"
            url="jdbc:mysql://localhost:3307/papercraft_db?useSSL=false"

            username="root"
            password="1"

            maxTotal="30"
            maxIdle="10"
            minIdle="5"
            maxWaitMillis="10000"

            initialSize="5"
            testOnBorrow="true"
            validationQuery="SELECT 1"
            validationInterval="30000"
    />

</Context>
